<div class=container>
  <div class="container p-3">
    <h1><strong>Notre sélection unique de Dragons</strong></h1>
    <p>Louer son dragon sans se prendre la tête.</p>
    <div class="wrapper">
      <% @dragons.each do |dragon| %>
        <div class="border m-2 p-4">
          <div class="card position-relative m-2 p-4">
            <div class="text-center shadow-lg"><%= cl_image_tag dragon.photo.key, width: 250, height: 150, crop: :fill %></div>
            <div class="card-body">
              <h3 class="card-title"><%= dragon.name %></h3>
              <p class="card-text"><%= dragon.nature %></p>
              <h3 class="card-text text-end"> <strong>$ <%= dragon.price_per_day %></strong></h3>
              <div class="text-center p-2"><%= link_to "Voir le dragon", dragon_path(dragon), class:"btn btn-warning" %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
